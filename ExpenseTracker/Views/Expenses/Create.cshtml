@model ExpenseTracker.Models.Expense

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Expense</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpenseDateTimeUtc" class="control-label"></label>
                <input asp-for="ExpenseDateTimeUtc" class="form-control" />
                <span asp-validation-for="ExpenseDateTimeUtc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.CategoryId, new SelectList(
                                                         Model.Categories,
                                                         "Id","Name"),"Select", new { @class = "form-control" } )
                </div>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
